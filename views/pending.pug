extends partials/layout.pug

block content
  h1.Home__header Touching Hands,
  .Pending__container
    //- likers
    h3.Pending__left Touching me, (these people like you...)
      .Pending__box
        each liker in userLikers
          .Pending__box__img
            img(src=liker.photo alt=liker.name)
            .Pending__box__buttons
              a.btn.btn-success(href="/profile/"+liker.id) view

    //- likees
    h3.Pending__right Touching you, (you like these people...)
      .Pending__box
        each likee in userLikees
          .Pending__box__img
            img(src=likee.photo alt=likee.name)
